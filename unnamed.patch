+        //根据缓存文件创建一个File
+        File file = new File(getCacheDir(), fileName);
+
+        try {
+            //开启缓存文件上的输出流
+            FileOutputStream fop = new FileOutputStream(file);
+            //向输出流中写入数据
+            fop.write(DATA.getBytes("UTF-8"));
+            //关闭输出流
+            fop.close();
+        } catch (Exception e) {
+            e.printStackTrace();
+        }
+    }
+
+
